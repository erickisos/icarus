{
  "name": "icarus",
  "displayName": "icarus",
  "description": "A simple IRC Client for VSCode",
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "icarusServers",
        "contents": "No servers connected yet, you can add one server by clicking [here](command:icarus.addServer)."
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "icarus-explorer",
          "title": "Icarus",
          "icon": "resources/icarus.svg"
        }
      ]
    },
    "views": {
      "icarus-explorer": [
        {
          "id": "icarusServers",
          "name": "Icarus"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "icarus.connectToServer",
          "when": "view == icarusServers"
        },
        {
          "command": "icarus.disconnectFromServer",
          "when": "view == icarusServers"
        },
        {
          "command": "icarus.editServer",
          "when": "view == icarusServers"
        },
        {
          "command": "icarus.removeServer",
          "when": "view == icarusServers"
        }
      ]
    },
    "commands": [
      {
        "title": "Icarus: Add Server",
        "command": "icarus.addServer"
      },
      {
        "title": "Icarus: Edit Server",
        "command": "icarus.editServer"
      },
      {
        "title": "Icarus: Remove Server",
        "command": "icarus.removeServer"
      },
      {
        "title": "Icarus: Connect to Server",
        "command": "icarus.connectToServer"
      },
      {
        "title": "Icarus: Disconnect from Server",
        "command": "icarus.disconnectFromServer"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "ts-loader": "^9.5.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-electron": "^2.3.6"
  }
}
